doctype
html
  head
    title Threads API Sample App - #{title}
    link(rel='stylesheet' href='/css/style.css')
  body
    header
      h1= title

    block content

    div#loadingOverlay(style='display: none; position: fixed; top: 0; left: 0; height: 100vh; width: 100%; background-color: rgba(255,255,255,0.8); z-index: 9999;')
      div(style='position: relative; top: 50%; left: 50%; transform: translate(-50%, -50%);')
        img(src='/img/loading.gif' alt='Loading...')


    if (message)
      .alert
        span.closebtn(onclick="this.parentElement.style.display='none';") &times;
        |   #{message}

    if(error)
      .alert-error
        span.closebtn(onclick="this.parentElement.style.display='none';") &times;
        |   Error Occured - #{error}!

    block scripts