    div
        p Current status:&nbsp;
            span#container-status Unknown

    div#status-explanation

    p#error-message

    form#form(action='/publish' method='POST')
        input#container-id(type='hidden' name='containerId' value=containerId)
        input#submit.threads-button(type='submit' value='Publish' disabled='disabled')

